        let currentQuestion = 0;
        let score = 0;
        let userAnswers = [];

        function startQuiz() {
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('quizScreen').classList.remove('hidden');
            showQuestion();
        }

        function showQuestion() {
            const question = questions[currentQuestion];
            document.getElementById('questionNumber').textContent = `Pitanje ${currentQuestion + 1} od ${questions.length}`;
            document.getElementById('questionText').textContent = question.question;
            
            const answersContainer = document.getElementById('answersContainer');
            answersContainer.innerHTML = '';
            
            question.answers.forEach((answer, index) => {
                const button = document.createElement('button');
                button.className = 'answer-button w-full p-4 text-left text-gray-800 bg-gray-50 hover:bg-blue-100 rounded-xl border-2 border-transparent hover:border-blue-300 transition-all duration-200 font-medium';
                button.textContent = answer.text;
                button.onclick = () => selectAnswer(index);
                answersContainer.appendChild(button);
            });
            
            updateProgressBar();
        }

        function selectAnswer(answerIndex) {
            const question = questions[currentQuestion];
            const selectedAnswer = question.answers[answerIndex];
            
            score += selectedAnswer.points;
            userAnswers.push({
                question: question.question,
                answer: selectedAnswer.text,
                points: selectedAnswer.points
            });
            
            currentQuestion++;
            
            if (currentQuestion < questions.length) {
                setTimeout(() => {
                    showQuestion();
                }, 300);
            } else {
                setTimeout(() => {
                    showResults();
                }, 300);
            }
        }

        function updateProgressBar() {
            const progress = ((currentQuestion + 1) / questions.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        function showResults() {
            document.getElementById('quizScreen').classList.add('hidden');
            document.getElementById('resultScreen').classList.remove('hidden');
            
            let resultTitle, resultDescription, resultEmoji;
            
            if (score >= 30) {
                resultTitle = "AI Lider";
                resultDescription = "Va≈° biznis je veƒá na visokom nivou! Mo≈æete dodatno optimizovati procese i poveƒáati profit kroz napredne AI strategije.";
                resultEmoji = "üèÜ";
            } else if (score >= 15) {
                resultTitle = "AI Potencijal";
                resultDescription = "Va≈° biznis ima solidnu osnovu, ali gubite znaƒçajan novac na neautomatizovanim procesima. AI mo≈æe da vam u≈°tedi hiljade evra meseƒçno.";
                resultEmoji = "üìà";
            } else {
                resultTitle = "AI Starter";
                resultDescription = "Va≈° biznis gubi ogroman novac svakodnevno! AI automatizacija mo≈æe da vam u≈°tedi 60-80% vremena i znaƒçajno poveƒáa profit.";
                resultEmoji = "üöÄ";
            }
            
            document.getElementById('resultTitle').textContent = resultTitle;
            document.getElementById('resultDescription').textContent = resultDescription;
            document.getElementById('resultEmoji').textContent = resultEmoji;
            document.getElementById('scoreDisplay').textContent = `Va≈° rezultat: ${score} od ${questions.length * 3} poena`;
            
            generateShortAnalysis();
        }

        function generateShortAnalysis() {
            let analysisPoints = [];
            
            // Analiziraj odgovore i dodeli probleme
            userAnswers.forEach((answer, index) => {
                if (answer.points <= 1) {
                    switch(index) {
                        case 0:
                            analysisPoints.push("‚è∞ Gubite preko 10 sati nedeljno na ponavljajuƒáa pitanja - AI napredni asistent mo≈æe da re≈°i 80% upita automatski");
                            break;
                        case 1:
                            analysisPoints.push("üåô Propu≈°tate prodaje van radnog vremena - AI napredni asistent radi 24/7 i nikad ne spava");
                            break;
                        case 2:
                            analysisPoints.push("üìä Neorganizovano upravljanje klijentima - AI napredni asistent automatski prati i neguje svaki kontakt");
                            break;
                        case 3:
                            analysisPoints.push("üìã Previ≈°e vremena na administraciju - AI napredni asistent mo≈æe automatizovati 70% administrativnih zadataka");
                            break;
                        case 7:
                            analysisPoints.push("üí¨ Nemate AI naprednog asistenta - gubite 40% potencijalnih klijenata koji odlaze bez odgovora");
                            break;
                        case 10:
                            analysisPoints.push("üìß Ruƒçni marketing - AI napredni asistent mo≈æe poveƒáati konverzije za 300%");
                            break;
                    }
                }
            });
            
            // Ako nema problema, dodaj pozitivne komentare
            if (analysisPoints.length === 0) {
                analysisPoints.push("‚úÖ Va≈° biznis je dobro organizovan, ali AI mo≈æe dodatno optimizovati procese");
                analysisPoints.push("üöÄ Fokusirajte se na napredne AI strategije za skaliranje biznisa");
                analysisPoints.push("üí° Implementirajte prediktivnu analitiku za bolje poslovne odluke");
            }
            
            // Prika≈æi maksimalno 4 najva≈ænije taƒçke
            const topPoints = analysisPoints.slice(0, 4);
            document.getElementById('analysisContent').innerHTML = topPoints.map(point => 
                `<div class="flex items-start space-x-3">
                    <div class="text-lg">${point.split(' ')[0]}</div>
                    <div>${point.substring(point.indexOf(' ') + 1)}</div>
                </div>`
            ).join('');
        }

        function requestDetailedAnalysis() {
            const email = document.getElementById('detailedAnalysisEmail').value;
            if (!email || !email.includes('@')) {
                showCustomAlert('Molimo unesite validnu email adresu!');
                return;
            }
            
            // BACKUP SISTEM - saƒçuvaj podatke lokalno
            saveDataLocally(email);
            
            // Po≈°alji podatke na nikolanative@gmail.com
            sendDetailedAnalysisEmail(email);
            
            // Prika≈æi poruku korisniku
            showCustomAlert('Hvala! Detaljnu analizu ƒáete dobiti u roku od 24h na va≈°u email adresu.');
            
            // Sakrij formu i prika≈æi veliku potvrdu
            const emailSection = document.querySelector('button[onclick="requestDetailedAnalysis()"]').parentElement;
            emailSection.innerHTML = `
                <div class="bg-green-100 border-2 border-green-500 rounded-2xl p-8 text-center">
                    <div class="text-6xl mb-4">‚úÖ</div>
                    <h3 class="text-2xl font-bold text-green-800 mb-4">Zahtev je uspe≈°no poslat!</h3>
                    <p class="text-lg text-green-700 mb-2">
                        <strong>Detaljnu AI analizu ƒáete dobiti u roku od 24h</strong> na va≈°u email adresu.
                    </p>
                    <p class="text-base text-green-600">
                        üìß Proverite i spam folder ‚Ä¢ üöÄ Analiza sadr≈æi konkretne korake za automatizaciju
                    </p>
                </div>
            `;
        }

        function sendDetailedAnalysisEmail(userEmail) {
            const resultTitle = document.getElementById('resultTitle').textContent;
            
            // Build comprehensive message for Nikola
            let emailMessage = `üö® NOVI LEAD ZA AI AUTOMATIZACIJU!

üìß Email: ${userEmail}
üìÖ Datum: ${new Date().toLocaleDateString('sr-RS')} u ${new Date().toLocaleTimeString('sr-RS')}

üèÜ AI SPREMNOST: ${resultTitle} (${score}/${questions.length * 3} poena)

üìã DETALJNI ODGOVORI SA ANALIZOM:

`;

            // Add each question and answer with analysis
            userAnswers.forEach((answer, index) => {
                let priority = "";
                let analysis = "";
                let recommendation = "";
                
                if (answer.points === 0) {
                    priority = "üî¥ KRITIƒåNO";
                    analysis = "Najveƒái problem - hitno potrebna AI automatizacija";
                    recommendation = "PRIORITET #1 za implementaciju";
                } else if (answer.points === 1) {
                    priority = "üü° PROBLEM";
                    analysis = "Znaƒçajan prostor za pobolj≈°anje uz AI";
                    recommendation = "Srednji prioritet za optimizaciju";
                } else if (answer.points === 2) {
                    priority = "üü¢ DOBRO";
                    analysis = "Solidno, ali AI mo≈æe dodatno pobolj≈°ati";
                    recommendation = "Fokus na napredne AI funkcionalnosti";
                } else {
                    priority = "‚úÖ ODLIƒåNO";
                    analysis = "AI lider - veƒá koristi automatizaciju";
                    recommendation = "Fokus na skaliranje i napredne strategije";
                }
                
                emailMessage += `${index + 1}. ${questions[index].question}

ODGOVOR: "${answer.text}"
POENI: ${answer.points}/3 ${priority}
ANALIZA: ${analysis}
PREPORUKA: ${recommendation}

---

`;
            });

            // Add key improvement areas
            const problemAreas = userAnswers.filter(answer => answer.points <= 1);
            if (problemAreas.length > 0) {
                emailMessage += `üéØ KLJUƒåNE OBLASTI ZA POBOLJ≈†ANJE:

`;
                problemAreas.forEach((answer) => {
                    const questionIndex = userAnswers.indexOf(answer);
                    let area = "";
                    let solution = "";
                    
                    switch(questionIndex) {
                        case 0: area = "Komunikacija sa klijentima"; solution = "AI chatbot + automatsko sortiranje"; break;
                        case 1: area = "Administrativni zadaci"; solution = "Workflow automatizacija"; break;
                        case 2: area = "Analitika biznisa"; solution = "AI dashboard + real-time izve≈°taji"; break;
                        case 3: area = "Upravljanje klijentima"; solution = "CRM automatizacija + AI prioritizacija"; break;
                        case 4: area = "Nezavisnost biznisa"; solution = "Kompletna AI automatizacija procesa"; break;
                        case 5: area = "Zakazivanje termina"; solution = "Online booking sistem"; break;
                        case 6: area = "Lead nurturing"; solution = "AI follow-up sekvence"; break;
                        case 7: area = "Skaliranje biznisa"; solution = "AI-driven growth strategija"; break;
                        case 8: area = "AI znanje"; solution = "Edukacija + implementacija AI alata"; break;
                        case 9: area = "Adaptacija na promene"; solution = "AI trend analiza + automatska prilagoƒëavanja"; break;
                        case 10: area = "Marketing automatizacija"; solution = "AI marketing kampanje"; break;
                        case 11: area = "Vizija buduƒánosti"; solution = "Strategijsko planiranje sa AI"; break;
                    }
                    
                    emailMessage += `‚Ä¢ ${area}: ${solution}
`;
                });
            }

            // Add savings estimation
            emailMessage += `
üí∞ PROCENJENA U≈†TEDA I RAST:
‚Ä¢ Vreme: ${score < 15 ? '25-40h' : score < 30 ? '15-25h' : '10-15h'} nedeljno
‚Ä¢ Tro≈°kovi: ${score < 15 ? '2000-5000‚Ç¨' : score < 30 ? '1000-3000‚Ç¨' : '500-2000‚Ç¨'} meseƒçno
‚Ä¢ Poveƒáanje prihoda: ${score < 15 ? '50-200%' : score < 30 ? '30-100%' : '20-50%'}
‚Ä¢ ROI: ${score < 15 ? '300-500%' : score < 30 ? '200-400%' : '150-300%'} u prvoj godini

üìû SALES PRISTUP:
‚Ä¢ Tip: ${score < 15 ? 'Problem-focused (fokus na bolove)' : score < 30 ? 'Growth-focused (fokus na moguƒánosti)' : 'Innovation-focused (fokus na prednosti)'}
‚Ä¢ Urgentnost: ${score < 15 ? 'VISOKA - gubi novac svaki dan' : score < 30 ? 'SREDNJA - propu≈°ta prilike' : 'NISKA - optimizacija postojeƒáeg'}
‚Ä¢ Pristup: ${score < 15 ? 'Naglasi tro≈°kove neautomatizacije' : score < 30 ? 'Poka≈æi potencijal za rast' : 'Fokus na konkurentsku prednost'}

‚ö° VEROVATNOƒÜA KONVERZIJE: ${score < 15 ? 'VISOKA (70%+)' : score < 30 ? 'SREDNJA (40-70%)' : 'NISKA (20-40%)'}

---
Test zavr≈°en: ${new Date().toLocaleString('sr-RS')}
Link: ${window.location.href}`;

            const subject = "üö® NOVI LEAD - AI Test: " + userEmail + " (" + resultTitle + ")";
            
            // EMAILJS SETUP - VA≈†I PODACI
            emailjs.init("uJ0IRzzaLev9f5VTk"); // Va≈° Public Key
            
            emailjs.send("service_g3gae9f", "template_mh6tevj", {
                to_name: "Nikola",
                from_email: userEmail,
                timestamp: new Date().toLocaleString('sr-RS'),
                total_score: score,
                category: resultTitle,
                quiz_data: emailMessage,
                subject: subject,
                message: emailMessage,
                reply_to: userEmail
            }).then((response) => {
                console.log('‚úÖ EmailJS: Email uspe≈°no poslat!', response.status, response.text);
                showCustomAlert('‚úÖ Email je uspe≈°no poslat! Proverite inbox.');
            }).catch((error) => {
                console.log('‚ùå EmailJS gre≈°ka:', error);
                console.log('Poku≈°avam Formspree backup...');
                tryFormspree();
            });
            
            function tryFormspree() {
                // BACKUP: Formspree
                fetch('https://formspree.io/f/xpwzgqpv', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email: userEmail,
                        subject: subject,
                        message: emailMessage,
                        _replyto: userEmail,
                        _subject: subject
                    })
                }).then(response => {
                    if (response.ok) {
                        console.log('‚úÖ Formspree: Email uspe≈°no poslat!');
                        showCustomAlert('‚úÖ Email je poslat preko backup sistema!');
                    } else {
                        console.log('‚ùå Formspree failed, poku≈°avam mailto...');
                        useMailtoBackup();
                    }
                }).catch(() => {
                    console.log('‚ùå Formspree failed, poku≈°avam mailto...');
                    useMailtoBackup();
                });
            }
            
            function useMailtoBackup() {
                // POSLEDNJI BACKUP: Mailto (uvek radi)
                const mailtoLink = `mailto:nikolanative@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(emailMessage)}`;
                window.open(mailtoLink);
                console.log('üìß Mailto backup aktiviran');
                showCustomAlert('üìß Otvoren je va≈° email klijent sa podacima!');
            }
            
            console.log('Email sistem pokrenut za:', userEmail);
        }

        function restartQuiz() {
            currentQuestion = 0;
            score = 0;
            userAnswers = [];
            document.getElementById('resultScreen').classList.add('hidden');
            document.getElementById('startScreen').classList.remove('hidden');
            document.getElementById('detailedAnalysisEmail').value = '';
            document.getElementById('detailedAnalysisEmail').style.display = 'block';
            document.querySelector('button[onclick="requestDetailedAnalysis()"]').style.display = 'block';
        }

        function shareResults() {
            const resultTitle = document.getElementById('resultTitle').textContent;
            const currentUrl = window.location.href;
            const shareText = `ü§ñ Upravo sam testirao koliko moj biznis gubi novac bez AI! 

Moj rezultat: ${resultTitle}

Rezultat me je ≈°okirao... Testiraj i ti svoj biznis BESPLATNO! üí∞`;
            
            // Try native sharing first
            if (navigator.share && navigator.canShare) {
                navigator.share({
                    title: 'AI Test: Da li va≈° biznis gubi novac bez AI?',
                    text: shareText,
                    url: currentUrl
                }).catch(() => {
                    // Fallback to clipboard
                    fallbackCopyShare(shareText, currentUrl);
                });
            } else {
                // Direct fallback to clipboard
                fallbackCopyShare(shareText, currentUrl);
            }
        }

        function fallbackCopyShare(shareText, currentUrl) {
            const fullText = `${shareText}\n\n${currentUrl}`;
            
            // Try modern clipboard API
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(fullText).then(() => {
                    showCustomAlert('Tekst je kopiran u clipboard! Mo≈æete ga podeliti gde god ≈æelite.');
                }).catch(() => {
                    // Fallback to older method
                    legacyCopyToClipboard(fullText);
                });
            } else {
                // Fallback to older method
                legacyCopyToClipboard(fullText);
            }
        }

        function legacyCopyToClipboard(text) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            textArea.style.top = '-999999px';
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                document.execCommand('copy');
                showCustomAlert('Tekst je kopiran u clipboard! Mo≈æete ga podeliti gde god ≈æelite.');
            } catch (err) {
                showCustomAlert('Molimo vas da ruƒçno kopirate link: ' + window.location.href);
            }
            
            document.body.removeChild(textArea);
        }

        function copyResults() {
            const currentUrl = window.location.href;
            const copyText = `ü§ñ AI Test: Da li va≈° biznis gubi novac bez AI?

Otkrijte gde gubite vreme i novac i kako AI mo≈æe da vam u≈°tedi hiljade evra meseƒçno!

Testiraj BESPLATNO: ${currentUrl}`;
            
            // Try modern clipboard API
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(copyText).then(() => {
                    showCustomAlert('Link je kopiran u clipboard!');
                }).catch(() => {
                    legacyCopyToClipboard(copyText);
                });
            } else {
                legacyCopyToClipboard(copyText);
            }
        }



        function generateDetailedAnalysis() {
            let detailedAnalysis = {
                komunikacija: { score: 0, problems: [], solutions: [] },
                automatizacija: { score: 0, problems: [], solutions: [] },
                analitika: { score: 0, problems: [], solutions: [] },
                upravljanje: { score: 0, problems: [], solutions: [] },
                skaliranje: { score: 0, problems: [], solutions: [] }
            };
            
            userAnswers.forEach((answer, index) => {
                switch(index) {
                    case 0: // Komunikacija sa klijentima
                        detailedAnalysis.komunikacija.score = answer.points;
                        if (answer.points <= 1) {
                            detailedAnalysis.komunikacija.problems.push("Neorganizovana komunikacija sa klijentima");
                            detailedAnalysis.komunikacija.solutions.push("24/7 AI chatbot koji odgovara na 80% pitanja automatski");
                            detailedAnalysis.komunikacija.solutions.push("Automatsko sortiranje i prioritizacija poruka");
                            detailedAnalysis.komunikacija.solutions.push("Integracija svih komunikacionih kanala u jedan sistem");
                        }
                        break;
                    case 1: // Administrativni zadaci
                        detailedAnalysis.automatizacija.score += answer.points;
                        if (answer.points <= 1) {
                            detailedAnalysis.automatizacija.problems.push("Previ≈°e vremena na ponavljajuƒáim zadacima");
                            detailedAnalysis.automatizacija.solutions.push("Workflow automatizacija za rutinske procese");
                            detailedAnalysis.automatizacija.solutions.push("AI asistent za kreiranje dokumenata i izve≈°taja");
                            detailedAnalysis.automatizacija.solutions.push("Automatsko fakturisanje i praƒáenje plaƒáanja");
                        }
                        break;
                    case 2: // Analitika
                        detailedAnalysis.analitika.score = answer.points;
                        if (answer.points <= 1) {
                            detailedAnalysis.analitika.problems.push("Nedostatak sistematskog praƒáenja performansi");
                            detailedAnalysis.analitika.solutions.push("AI dashboard sa real-time metrikama");
                            detailedAnalysis.analitika.solutions.push("Prediktivna analitika za bolje odluƒçivanje");
                            detailedAnalysis.analitika.solutions.push("Automatski izve≈°taji i alerti");
                        }
                        break;
                    case 3: // Upravljanje klijentima
                    case 6: // Lead nurturing
                        detailedAnalysis.upravljanje.score += answer.points;
                        if (answer.points <= 1) {
                            detailedAnalysis.upravljanje.problems.push("Neorganizovano upravljanje klijentima i lead-ovima");
                            detailedAnalysis.upravljanje.solutions.push("CRM sistem sa AI lead scoring");
                            detailedAnalysis.upravljanje.solutions.push("Automatske follow-up sekvence");
                            detailedAnalysis.upravljanje.solutions.push("Personalizovane komunikacije na osnovu AI analize");
                        }
                        break;
                    case 7: // Skaliranje
                    case 11: // Buduƒánost biznisa
                        detailedAnalysis.skaliranje.score += answer.points;
                        if (answer.points <= 1) {
                            detailedAnalysis.skaliranje.problems.push("Nedostatak strategije za rast i skaliranje");
                            detailedAnalysis.skaliranje.solutions.push("AI-driven growth strategija");
                            detailedAnalysis.skaliranje.solutions.push("Automatizacija procesa za nezavisan rad biznisa");
                            detailedAnalysis.skaliranje.solutions.push("Sistemsko pristup ekspanziji uz AI podr≈°ku");
                        }
                        break;
                }
            });
            
            return detailedAnalysis;
        }



        function saveDataLocally(email) {
            const resultTitle = document.getElementById('resultTitle').textContent;
            const timestamp = new Date().toLocaleString('sr-RS');
            
            const leadData = {
                email: email,
                timestamp: timestamp,
                resultTitle: resultTitle,
                score: score,
                maxScore: questions.length * 3,
                answers: userAnswers,
                url: window.location.href
            };
            
            // Saƒçuvaj u localStorage
            let allLeads = JSON.parse(localStorage.getItem('aiTestLeads') || '[]');
            allLeads.push(leadData);
            localStorage.setItem('aiTestLeads', JSON.stringify(allLeads));
            
            console.log('NOVI LEAD SAƒåUVAN:', leadData);
        }

        function showAdminPanel() {
            const allLeads = JSON.parse(localStorage.getItem('aiTestLeads') || '[]');
            
            let adminHTML = `
                <div class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
                    <div class="bg-white rounded-lg max-w-4xl w-full max-h-90vh overflow-y-auto p-6">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-2xl font-bold">Admin Panel - Svi Lead-ovi</h2>
                            <button onclick="closeAdminPanel()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
                        </div>
                        
                        <div class="mb-4">
                            <button onclick="exportLeads()" class="bg-green-500 text-white px-4 py-2 rounded mr-2">
                                üìß Izvezi sve lead-ove
                            </button>
                            <button onclick="clearLeads()" class="bg-red-500 text-white px-4 py-2 rounded">
                                üóëÔ∏è Obri≈°i sve
                            </button>
                        </div>
                        
                        <div class="space-y-4">
            `;
            
            if (allLeads.length === 0) {
                adminHTML += '<p class="text-gray-500">Nema saƒçuvanih lead-ova.</p>';
            } else {
                allLeads.reverse().forEach((lead, index) => {
                    adminHTML += `
                        <div class="border p-4 rounded-lg bg-gray-50">
                            <div class="flex justify-between items-start mb-2">
                                <div>
                                    <h3 class="font-bold text-lg">${lead.email}</h3>
                                    <p class="text-sm text-gray-600">${lead.timestamp}</p>
                                </div>
                                <div class="text-right">
                                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm">${lead.resultTitle}</span>
                                    <p class="text-sm mt-1">${lead.score}/${lead.maxScore} poena</p>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <button onclick="showLeadDetails(${allLeads.length - 1 - index})" class="bg-blue-500 text-white px-3 py-1 rounded text-sm mr-2">
                                    üëÅÔ∏è Detalji
                                </button>
                                <button onclick="copyLeadData(${allLeads.length - 1 - index})" class="bg-green-500 text-white px-3 py-1 rounded text-sm">
                                    üìã Kopiraj analizu
                                </button>
                            </div>
                        </div>
                    `;
                });
            }
            
            adminHTML += `
                        </div>
                    </div>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', adminHTML);
        }

        function closeAdminPanel() {
            const panel = document.querySelector('.fixed.inset-0.bg-black');
            if (panel) panel.remove();
        }

        function showLeadDetails(index) {
            const allLeads = JSON.parse(localStorage.getItem('aiTestLeads') || '[]');
            const lead = allLeads[index];
            
            let detailsHTML = `
                <div class="fixed inset-0 bg-black bg-opacity-50 z-60 flex items-center justify-center p-4">
                    <div class="bg-white rounded-lg max-w-4xl w-full max-h-90vh overflow-y-auto p-6">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-2xl font-bold">Detalji Lead-a: ${lead.email}</h2>
                            <button onclick="closeLeadDetails()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
                        </div>
                        
                        <div class="mb-4 p-4 bg-gray-100 rounded">
                            <p><strong>Email:</strong> ${lead.email}</p>
                            <p><strong>Datum:</strong> ${lead.timestamp}</p>
                            <p><strong>Rezultat:</strong> ${lead.resultTitle} (${lead.score}/${lead.maxScore} poena)</p>
                        </div>
                        
                        <h3 class="text-xl font-bold mb-3">Odgovori na pitanja:</h3>
                        <div class="space-y-3">
            `;
            
            lead.answers.forEach((answer, i) => {
                let priority = "";
                if (answer.points === 0) priority = "üî¥ KRITIƒåNO";
                else if (answer.points === 1) priority = "üü° PROBLEM";
                else if (answer.points === 2) priority = "üü¢ DOBRO";
                else priority = "‚úÖ ODLIƒåNO";
                
                detailsHTML += `
                    <div class="border-l-4 ${answer.points <= 1 ? 'border-red-500' : answer.points === 2 ? 'border-yellow-500' : 'border-green-500'} pl-4 py-2">
                        <p class="font-semibold">${i + 1}. ${questions[i].question}</p>
                        <p class="text-gray-700 mt-1">Odgovor: "${answer.text}"</p>
                        <p class="text-sm mt-1">${answer.points}/3 poena ${priority}</p>
                    </div>
                `;
            });
            
            detailsHTML += `
                        </div>
                        
                        <div class="mt-6 flex gap-2">
                            <button onclick="copyLeadData(${index})" class="bg-green-500 text-white px-4 py-2 rounded">
                                üìã Kopiraj kompletnu analizu
                            </button>
                            <button onclick="closeLeadDetails()" class="bg-gray-500 text-white px-4 py-2 rounded">
                                Zatvori
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', detailsHTML);
        }

        function closeLeadDetails() {
            const details = document.querySelector('.z-60');
            if (details) details.remove();
        }

