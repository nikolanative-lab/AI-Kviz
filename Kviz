            analysisText += `üí∞ PROCENJENA U≈†TEDA:
‚Ä¢ Vreme: ${lead.score < 15 ? '25-40h' : lead.score < 30 ? '15-25h' : '10-15h'} nedeljno
‚Ä¢ Tro≈°kovi: ${lead.score < 15 ? '2000-5000‚Ç¨' : lead.score < 30 ? '1000-3000‚Ç¨' : '500-2000‚Ç¨'} meseƒçno
‚Ä¢ ROI: ${lead.score < 15 ? '300-500%' : lead.score < 30 ? '200-400%' : '150-300%'} u prvoj godini

üìû SALES PRISTUP:
‚Ä¢ Urgentnost: ${lead.score < 15 ? 'VISOKA - gubi novac svaki dan' : lead.score < 30 ? 'SREDNJA - propu≈°ta prilike' : 'NISKA - optimizacija postojeƒáeg'}
‚Ä¢ Verovatnoƒáa konverzije: ${lead.score < 15 ? 'VISOKA (70%+)' : lead.score < 30 ? 'SREDNJA (40-70%)' : 'NISKA (20-40%)'}

---
Link: ${lead.url}`;

            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(analysisText).then(() => {
                    showCustomAlert('Analiza je kopirana u clipboard!');
                });
            } else {
                // Fallback
                const textArea = document.createElement('textarea');
                textArea.value = analysisText;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showCustomAlert('Analiza je kopirana u clipboard!');
            }
        }

        function exportLeads() {
            const allLeads = JSON.parse(localStorage.getItem('aiTestLeads') || '[]');
            
            if (allLeads.length === 0) {
                showCustomAlert('Nema lead-ova za izvoz!');
                return;
            }
            
            let exportText = `AI TEST LEAD-OVI - IZVOZ ${new Date().toLocaleString('sr-RS')}

UKUPNO LEAD-OVA: ${allLeads.length}

=====================================

`;

            allLeads.forEach((lead, index) => {
                exportText += `LEAD #${index + 1}
Email: ${lead.email}
Datum: ${lead.timestamp}
Rezultat: ${lead.resultTitle} (${lead.score}/${lead.maxScore} poena)

ODGOVORI:
`;
                lead.answers.forEach((answer, i) => {
                    exportText += `${i + 1}. ${questions[i].question}
   Odgovor: "${answer.text}" (${answer.points}/3 poena)
`;
                });
                
                exportText += `
PROCENA:
- Verovatnoƒáa konverzije: ${lead.score < 15 ? 'VISOKA' : lead.score < 30 ? 'SREDNJA' : 'NISKA'}
- Urgentnost: ${lead.score < 15 ? 'VISOKA' : lead.score < 30 ? 'SREDNJA' : 'NISKA'}

=====================================

`;
            });

            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(exportText).then(() => {
                    showCustomAlert('Svi lead-ovi su kopirani u clipboard!');
                });
            }
        }

        function clearLeads() {
            if (confirm('Da li ste sigurni da ≈æelite da obri≈°ete sve lead-ove?')) {
                localStorage.removeItem('aiTestLeads');
                showCustomAlert('Svi lead-ovi su obrisani!');
                closeAdminPanel();
            }
        }

        function showCustomAlert(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50';
            alertDiv.textContent = message;
            document.body.appendChild(alertDiv);
            
            setTimeout(() => {
                alertDiv.remove();
            }, 3000);
        }


